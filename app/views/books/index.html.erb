<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
 <% end %>

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |b| %>
			<tr>
				<td><%= b.title %></td>
				<td><%= b.body %></td>
				<td><%= link_to "Show", book_path(b) %></td>
				<td><%= link_to "Edit", edit_book_path(b) %></td>
				<td><%= link_to "Destroy", book_path(b), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>


<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% end %>






