<h1>Editing Book</h1>

<%= form_with model: @book, url: books_path,method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>

<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
 <% end %>


<% @book.errors.full_messages.each do |message| %>
<div class="form-error">
  <%= message %>
</div>
<% end %>